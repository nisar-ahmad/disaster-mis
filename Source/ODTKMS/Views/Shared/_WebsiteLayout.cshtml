    <script type="text/javascript">

        function isValidEmail(email) {
            var re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(email);
        }

        $('#NewsletterButton').click(function () {
            var email = $('#NewsletterEmail').val()

            if (!isValidEmail(email))
                return alert('Invalid email address');

            $('#NewsletterEmail').val('');
            $('#myModal').modal('show');

            $.post("api/Alert/Website", {
                Type: "newsletter",
                Subject: "Newsletter request from " + email,
                Body: "Newsletter subscription request received from <strong>" + email + "</strong>."
            })
              .done(function (data) {
              });
        });

        $('#FeedbackButton').click(function () {

            var name = $('#FeedbackName').val()
            var email = $('#FeedbackEmail').val();
            var msg = $('#FeedbackMessage').val()

            if (!name || !msg || !isValidEmail(email))
                return alert('Please enter a valid name, email and message!');

            $('#FeedbackName').val('')
            $('#FeedbackEmail').val('');
            $('#FeedbackMessage').val('');
            $('#myModal').modal('show');

            $.post("api/Alert/Website", {
                Type: "feedback",
                Subject: "Website Feedback from " + name,
                Body: "<strong>Website Feedback</strong><br /><br />"
                     + "<strong>Name : </strong>" + name + "<br />"
                     + "<strong>Email : </strong>" + email + "<br />"
                     + "<strong>Message : </strong>" + msg
            })
              .done(function (data) {
              });
        });

